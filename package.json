{
	"name": "@p-ob/site",
	"type": "module",
	"repository": {
		"type": "git",
		"url": "https://github.com/p-ob/pob.dev/"
	},
	"engines": {
		"node": ">=22"
	},
	"devDependencies": {
		"@11ty/eleventy": "^3.1.2",
		"@11ty/eleventy-img": "^6.0.4",
		"@11ty/eleventy-navigation": "^1.0.5",
		"@11ty/eleventy-plugin-rss": "^2.0.4",
		"@lit-labs/eleventy-plugin-lit": "^1.0.6",
		"@playwright/test": "^1.57.0",
		"clean-css": "^5.3.3",
		"linkedom": "^0.18.12",
		"lit": "^3.3.2",
		"markdown-it-container": "^4.0.0",
		"markdown-it-footnote": "^4.0.0",
		"pagefind": "^1.4.0",
		"prettier": "^3.8.0",
		"rss-parser": "^3.13.0",
		"slugify": "^1.6.6",
		"syntax-highlight-element": "^1.2.0",
		"temporal-polyfill": "^0.3.0",
		"wrangler": "^4.58.0"
	},
	"scripts": {
		"build": "npm run build:11ty && npm run build:index",
		"build:11ty": "eleventy",
		"build:index": "pagefind --site public",
		"start": "eleventy --watch --serve --incremental",
		"clean": "git clean -dfX -e \"!.env\"",
		"lint": "prettier --check \"src/**/*.{js,md,css,json,html}\"",
		"format": "prettier --write \"src/**/*.{js,md,css,json,html}\"",
		"dev": "wrangler dev",
		"deploy": "wrangler deploy",
		"test": "playwright test",
		"test:unit": "node --experimental-test-module-mocks --test tests/unit/**/*.test.js",
		"test:ui": "playwright test --ui"
	}
}