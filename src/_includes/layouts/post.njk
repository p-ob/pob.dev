---
layout: base.njk
pageType: article
---

<link rel="stylesheet" href="/assets/css/post.css">

<h1 data-pagefind-weight="10" data-pagefind-meta="title">{{ title }}</h1>
<time datetime="{{ page.date | machineDate }}">{{ page.date | readableDate }}</time>

{% if tags %}
	{% set displayTags = tags | except("post") %}
  {% if displayTags.length %}
    <div class="tags">
      {% for tag in displayTags %}
        <span class="tag">{{ tag }}</span>
      {% endfor %}
    </div>
  {% endif %}
{% endif %}

<hr/>

{{ content | safe }}
