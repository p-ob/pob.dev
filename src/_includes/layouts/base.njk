<!DOCTYPE html>
<html lang="en">
	{% include "./partials/_head.njk" %}
  <body>
    <pob-app
			id="app"
			current-year="{{ metadata.currentYear }}"
			author="{{ author | json_html }}"
			repository="{{ pkg.repository.url }}"
			source="{{ page.inputPath }}"
			branch="main"
			commit-sha="{{ metadata.commitSha }}"
			{% if pageType %} page-type="{{ pageType }}" {% endif %}
			{% if noSidebar %} no-sidebar="" {% endif %}>
			{% if pageType == 'article' %}
			<article {% if not excludeFromSearch %} data-pagefind-body="" {% endif %}>{{ content | safe }}</article>
			{% else %}
      <section {% if not excludeFromSearch %} data-pagefind-body="" {% endif %}>{{ content | safe }}</section>
			{% endif %}
			{% if not noSidebar %}
			<nav id="toc" slot="sidebar">
				<strong>On this page</strong>
			</nav>
			{% endif %}
    </pob-app>
    <script type="module">
      await import('@lit-labs/ssr-client/lit-element-hydrate-support.js');
      import('/assets/js/components/app.js');
			import('/assets/js/components/note.js');
			import('/assets/js/components/tile.js');

			// Configure syntax-highlight-element with page-specific languages
			// Must be set before importing the element
			{% set codeLanguages = page | getCodeLanguages %}
			{% if codeLanguages.length > 0 %}
			window.she = window.she || {};
			window.she.config = {
				languages: {{ codeLanguages | dump | safe }},
			};

			import('syntax-highlight-element');
			{% endif %}

			// Register service worker for offline support
			if ('serviceWorker' in navigator) {
				navigator.serviceWorker.register('/sw.js');
			}
    </script>
  </body>
</html>
